    p !{l.navigation_1_1}
    p !{l.navigation_1_2}
    p !{l.navigation_1_3}
    p !{l.navigation_1_4}


  p.card-message
    | #{l.navigation_3}

  p.card-message
    | #{l.navigation_4}
    
  h5
    .headerLink Samply Workshop
  .videoTutorial
    iframe(src='https://www.youtube.com/embed/b4zTURHx-Jk' title='YouTube video player' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
