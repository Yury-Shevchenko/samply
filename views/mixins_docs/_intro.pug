  h5 
    .headerLink !{l.introduction_title}
  p.card-message 
    | #{l.introduction_1}
    | !{l.introduction_2}
    | #{l.introduction_3}
  
  h5 
    .headerLink !{l.howitworks_title}
  p.card-message
    | #{l.introduction_4}
  
  h5
    .headerLink !{l.navigation_title}
  p.card-message
    | #{l.navigation_1}
