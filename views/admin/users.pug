extends ../layout


block content
  .inner
    p
    .card
      h4 Samply users
      
      table.table 
      
        thead
          td X
          td N.
          td Role
          td Created
          td Samply ID
          td Name
          td Email
          td Confirmed
          td Institute
          td Projects (participant)
          td Projects (researcher)

        
        each user, i in users
        
          tr 
            td
              a(href=`/admin/removeuser/${user._id}`) 
                <i class="far fa-trash-alt"></i>
            td #{i + 1}
            td= user.level
            td= h.moment(user.created).locale(language).format("MMM Do YY HH:mm") 
            td= user.samplyId
            td= user.name
            td= user.email 
            td= user.emailIsConfirmed
            td= user.institute
            td= user.participant_projects.length
            td= user.projects.length
            

      
    pre= h.dump(users)
