extends layout

block content
  .inner    
    if project
      
      h2 #{l.deleteProject}

      form(action=`/projects/removeproject/${project._id}` method = 'POST' class='card' id="testform")

        h5= project.name
        p

        label
          | #{l.numberMembers}
          strong #{project.members.length}
        label
          | #{l.numberResults}
          strong #{resultsCount}
        label
          | #{l.numberParticipants}
          strong #{participantsCount}

        p
          | #{l.confirmMessage_1} 
          strong #{project.name}
          | #{l.confirmMessage_2} 
          strong #{l.confirmMessage_3} 
          | #{l.confirmMessage_4} 

        input(type='text' name='confirmation')
        p


        input(type='submit' id="btnAddTest" value=l.delete class="button")
