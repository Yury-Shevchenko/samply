extends layout

block content
  .inner

    //- p
    //- header.top
    //-   nav.nav
    //-     .nav__section.nav__section--pages
    //-       li.nav__item: a.nav__link(href="/account", class=(currentPath.startsWith('/account') ? 'nav__link--active' : '')) #{layout.account}
